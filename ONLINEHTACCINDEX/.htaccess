RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond $1 !^(config|core|css|public|js|fonts|robots\.txt)
RewriteRule ^(.*)$ /index.php?path=$1 [NC,L,QSA]



# Sve sto dodje kroz request a nije direktorij ili file 
# ili se ne nalazi u config|core|css|js|fonts|robots\.txt direktorijima
# preusmjerava se na index.php file